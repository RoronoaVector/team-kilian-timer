<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado enfocado (hover) -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#4CAF50" /> <!-- Fondo verde -->
            <stroke android:width="2dp" android:color="#FFFFFF" /> <!-- Borde blanco -->
            <corners android:radius="8dp" /> <!-- Bordes redondeados -->
        </shape>
    </item>
    <!-- Estado normal -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#4CAF50" /> <!-- Fondo verde -->
            <stroke android:width="2dp" android:color="#999999" /> <!-- Borde gris -->
            <corners android:radius="8dp" /> <!-- Bordes redondeados -->
        </shape>
    </item>
</selector>